    "version": "2.0.0",
    "tasks": [
        {
            "label": "Dotnet - Build",
            "command": "dotnet build",
            "type": "shell",
            
            "group": {
                "kind": "build",
                "isDefault": true
            },

            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "echo": true,
                "focus": false
            },
            
            "problemMatcher": "$msCompile"
        }
    ]
}